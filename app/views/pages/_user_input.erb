<%= simple_form_for @prompt, url: root_path, method: :post, data: { turbo: true } do |f| %>
  <div>
    <%= f.input :input, label: "Input for OpenAI" %>
  </div>

  <div>
    <% if current_user %>
      <div>
        <%= label_tag :location, "Location" %>
        <%= text_field_tag :location, current_user.location, class: "form-control" %> <!-- Default to current_user.location -->
      </div>
    <% else %>
      <div>
        <%= label_tag :location, "Location" %>
        <%= text_field_tag :location, nil, class: "form-control" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= label_tag :radius, "Radius (km)" %>
    <%= number_field_tag :radius, 100, class: "form-control" %>
  </div>

  <div>
    <%= f.button :submit, "Submit" %>
  </div>
<% end %>
