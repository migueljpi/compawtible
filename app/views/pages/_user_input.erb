<%= simple_form_for @prompt, url: root_path, method: :post, data: { turbo: true } do |f| %>
  <%= f.fields_for :adoption_location, @adoption_location do |a| %>
    <%= a.input :location, label: "Location" %>
    <%= a.input :radius, input_html: { type: 'number' }, label: "Radius (km)" %>
  <% end %>
  <%= f.input :input, label: "Input for OpenAI" %>
  <%= f.button :submit, "Submit" %>
<% end %>
