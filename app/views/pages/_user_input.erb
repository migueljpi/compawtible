<%= simple_form_for @prompt, url: search_path, method: :post, data: { turbo: true, action: "turbo:submit-end->output#showModal" } do |f| %>
    <div class="row">
      <div class="d-flex justify-content-between">
        <div id="location" class="md-5 col-5">
          <% if current_user %>
            <div class="">
              <%= label_tag :location, "Where should we search for your pet?" %>
              <%= text_field_tag :location, current_user.location, class: "form-control small-input" %>
            </div>
          <% else %>
            <div>
              <%= label_tag :location, "Location" %>
              <%= text_field_tag :location, nil, class: "form-control small-input" %>
            </div>
          <% end %>
        </div>
        <div data-controller="radius" class="col-6">
          <span id="radius-value" class="" data-radius-target="output">100 km</span>
          <input step="50" type="range" id="radius-slider" name="radius" min="50" max="500" value="100" class="thick-slider form-range" data-radius-target="slider" data-action="input->radius#update">
        </div>
      </div>
    </div>

    <div>
      <%= f.input :input,
        label: false,
        as: :text,
        input_html: { class: "large-input", placeholder: "Describe your lifestyle in just a few words. Feel free to add some traits that you would like to see in your future pet." } %>
    </div>

    <div class="d-flex justify-content-center">
      <%= f.button :submit, "Submit", class: "btn-secondary" %>
    </div>
  <% end %>
