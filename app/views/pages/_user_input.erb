<%= simple_form_for @prompt, url: search_path, method: :post,
  data: { turbo_frame: "output-three", action: "turbo:submit-start->output#showLoadingModal turbo:submit-end->output#showOutput" } do |f| %>

  <div class="row">
    <div class="col-md-4" id="location">
      <%= text_field_tag :location, current_user.location, placeholder: "Where should we search for your pet?", class: "form-control small-input" %>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-6 slider-container d-flex justify-content-center" data-controller="radius" id="radius">
      <span id="radius-value" class="radius-text" data-radius-target="output">100 km</span>
      <div class="slider">
        <input step="50" type="range" id="radius-slider" name="radius" min="50" max="500" value="100" class="thick-slider form-range" data-radius-target="slider" data-action="input->radius#update">
      </div>
    </div>
  </div>

  <div>
    <%= f.input :input, label: false, as: :text,
      input_html: { class: "large-input", placeholder: "Describe your lifestyle in just a few words. Feel free to add some traits that you would like to see in your future pet." } %>
  </div>

  <div class="d-flex justify-content-center">
    <%= f.button :submit, "Submit", class: "btn-secondary" %>
  </div>
<% end %>
