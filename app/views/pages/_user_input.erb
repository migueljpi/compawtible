<%= simple_form_for @prompt, url: search_path, method: :post, data: { turbo: true } do |f| %>
  <div>
    <%= f.input :input, label: "Input for OpenAI" %>
  </div>

  <div>
  </div>

  <div>
    <% if current_user %>
      <div>
        <%= label_tag :location, "Location" %>
        <%= text_field_tag :location, current_user.location, class: "form-control" %> <!-- Default to current_user.location -->
      </div>
    <% else %>
      <div>
        <%= label_tag :location, "Location" %>
        <%= text_field_tag :location, nil, class: "form-control" %>
      </div>
    <% end %>
  </div>



  <div data-controller="radius">
    <div class="mb-3">
      <%= label_tag :radius, "Radius (km)" %>
      <input type="range" id="radius-slider" name="radius" min="1" max="500" value="100" class="form-range" data-radius-target="slider" data-action="input->radius#update">
      <span id="radius-value" class="fw-bold" data-radius-target="output">100 km</span>
    </div>
  </div>

  <div>
    <%= f.button :submit, "Submit" %>
  </div>
<% end %>
