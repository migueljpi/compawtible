<div class="header-top">
  <h1>Tell us about yourself and the friend you are looking for.</h1>
</div>


<div class="input-form">
  <%= render "user_input" %>
</div>

<div id="output-three" class="modal d-none" tabindex="-1" role="dialog" aria-labelledby="outputThreeLabel" aria-hidden="true" data-controller="output" data-output-target="outputThree">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="outputThreeLabel">Top Matches</h5>
        <button type="button" class="close" data-action="output#hideModal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "output_three", best_matches: @best_matches&.first(3) %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-action="output#hideModal">Close</button>
      </div>
    </div>
  </div>
</div>






<div class="empty-space">
</div>
<%= render "output" %>
<div class="mt-5">
  <h2>---------USERS---------</h2>
</div>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %> - <%= user.location %> - <%= user.role %>
    </li>
  <% end %>
</ul>
